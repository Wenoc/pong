<?php namespace pong; ?>
<html>
<?php include("inc/meta.html"); ?>
<body>

<?php
require_once("../php/GenericController.php");

$ctrl = new GenericController();
$errors = array(); 
// Insert new game.
if(isset($_POST["newgame"]) &&
	isset($_POST["winner"]) &&
	isset($_POST["loser"]))
{
	$p1 = (string)$_POST["winner"];
	$p2  = (string)$_POST["loser"];
	foreach(array($p1,$p2) as $player){
		if($ctrl->db->player_exists($player)){
			$out[] ="Player_exists:".$ctrl->db->player_exists($player);
			$errors[] = "Player $player does not exist.";
		}
	}
	if(isset($_POST["draw"]) && $_POST["draw"] == "draw")
		$winner = "draw";
	else 
		$winner = $p1;
	if(!count($errors)){
		$out[] = $ctrl->insert_new_game($p1,$p2,$winner);
	}
}

// New player.
else if(isset($_POST["newplayer"]) && sizeof($_POST["player"]))
{
	$player = strtolower((string)$_POST["player"]);
	if($ctrl->db->player_exists($player)){
		$errors[] = "Player $player already exists!";
	} else {
		$ctrl->db->insert_new_player($player);
		$out[] = "New player $player entered with 0 points.";
	}
}
?>


<form action="index.php" method=POST>
	<input type="hidden" name="newgame" value="1"/>
	Winner <input type="text" name="winner"/><br/>
	Loser&nbsp; <input type="text" name="loser"/><br/>
	<input type="checkbox" name="draw" value="draw">Draw game
	<input type="submit" value="Submit"/>
</form>


<form action="index.php" method="POST">
	<input type="hidden" name="newplayer" value="1"/>
	<input type="text" name="player"/><br/>
	<input type="submit" value="Submit"/>
</form>
Statistics:
<?php 
foreach($ctrl->db->get_stats() as $player){
	echo print_r($player,true)."<br/>"; 
}
?>
<br/><br/>
Errors: <?php echo print_r($ctrl->errors,true); ?>
<br/>
Output: <?php echo print_r($ctrl->out,true); ?>
</body></html>
